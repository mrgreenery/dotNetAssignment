@page "/posts"
@attribute [Authorize]
@inject IPostService PostService
@inject IUserService UserService
@using BlazorApp.Services
@using ApiContract
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Posts</PageTitle>

<h1>Posts</h1>


<!-- Create Post Form -->
<div class="card mb-4">
    <div class="card-body">
        <h3>Create New Post</h3>
        <div class="mb-3">
            <label class="form-label">Title:</label>
            <input type="text" class="form-control" @bind="newTitle" />
        </div>
        <div class="mb-3">
            <label class="form-label">Body:</label>
            <textarea class="form-control" rows="5" @bind="newBody"></textarea>
        </div>
        <!-- REMOVED: User selection dropdown -->
        <button class="btn btn-primary" @onclick="CreatePost">Create Post</button>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-2">@errorMessage</div>
        }
        @if (!string.IsNullOrEmpty(successMessage))
        {
            <div class="alert alert-success mt-2">@successMessage</div>
        }
    </div>
</div>

<!-- Posts List -->
<h3>All Posts</h3>

@if (posts == null || users == null)
{
    <p><em>Loading...</em></p>
}
else if (posts.Count == 0)
{
    <p>No posts found.</p>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Author</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var post in posts)
            {
                var author = users.FirstOrDefault(u => u.Id == post.UserId);
                <tr style="cursor: pointer;" @onclick="() => ViewPost(post.Id)">
                    <td>@post.Id</td>
                    <td>@post.Title</td>
                    <td>@(author?.UserName ?? $"User #{post.UserId}")</td>
                    <td>@post.Created.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    [CascadingParameter]
    public Task<AuthenticationState> AuthState { get; set; } = null!;
    
    private List<PostDto>? posts;
    private List<UserDto>? users;
    
    private string newTitle = "";
    private string newBody = "";
    private int loggedInUserId = 0;
    private string errorMessage = "";
    private string successMessage = "";

    protected override async Task OnInitializedAsync()
    {
        // Get the logged-in user's ID
        var authState = await AuthState;
        var userIdClaim = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
        
        if (userIdClaim != null)
        {
            loggedInUserId = int.Parse(userIdClaim.Value);
        }
        
        await LoadData();
    }

    private async Task LoadData()
    {
        posts = await PostService.GetPostsAsync(null, null);
        users = await UserService.GetUsersAsync(null);
    }

    private async Task CreatePost()
    {
        // Clear previous messages
        errorMessage = "";
        successMessage = "";

        // Validate input
        if (string.IsNullOrWhiteSpace(newTitle))
        {
            errorMessage = "Title is required.";
            return;
        }

        if (string.IsNullOrWhiteSpace(newBody))
        {
            errorMessage = "Body is required.";
            return;
        }

        try
        {
            // Create the DTO using logged-in user
            CreatePostDto dto = new CreatePostDto
            {
                Title = newTitle,
                Body = newBody,
                UserId = loggedInUserId  // Using authenticated user!
            };

            // Call the service
            await PostService.AddPostAsync(dto);

            // Show success message
            successMessage = $"Post '{newTitle}' created successfully!";

            // Clear the form
            newTitle = "";
            newBody = "";

            // Reload the posts list
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }
    
    private void ViewPost(int postId)
    {
        Navigation.NavigateTo($"/posts/{postId}");
    }

}